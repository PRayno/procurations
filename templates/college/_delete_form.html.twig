<form method="post" action="{{ path('college_delete', {'id': college.id}) }}" onsubmit="return confirm('Vraiment supprimer ce collège électoral ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ college.id) }}">
    <button class="button button-red">Supprimer</button>
</form>
